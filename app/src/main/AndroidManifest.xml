<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.deepmeditation.myapplication" >

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MyActivity"
            android:screenOrientation="landscape" >
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScaleActivity"
            android:label="@string/title_activity_configure" >
        </activity>
        <activity
            android:name=".SynthActivity"
            android:label="@string/title_activity_configure_synth" >
        </activity>
        <activity
            android:name=".SynthSettingsActivity"
            android:label="@string/title_activity_synth_settings" >
        </activity>
    </application>

</manifest>
